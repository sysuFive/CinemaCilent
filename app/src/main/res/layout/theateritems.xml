<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="10dp"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/theater_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="#ffffff"
        android:padding="@dimen/four_dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <ImageView
            android:id="@+id/theaterimg"
            android:layout_width="90dp"
            android:layout_height="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/theater"
            />
        <TextView
            android:id="@+id/theatername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="中影国际影城北京昌平永旺店"/>

        <TextView
            android:id="@+id/theateraddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="@dimen/four_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theatername"
            android:text="北京市昌平区北清路1号"
            tools:layout_height="@dimen/space2x"/>


        <TextView
            android:id="@+id/theaterphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            android:maxLines="2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/space"
            app:layout_constraintTop_toBottomOf="@+id/theateraddress"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="010-88177970"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>