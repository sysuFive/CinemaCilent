<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space2x"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/detail_rating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space2x"
            android:layout_marginTop="@dimen/space"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_rating_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.7"
                android:layout_marginLeft="@dimen/space2x"/>
        </LinearLayout>
        <TextView
            android:id="@+id/detail_release_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上映时间 ..."/>


        <TextView
            android:id="@+id/detail_release_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_size_18sp"
            tools:text="xxx"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space2x"
            android:text="类型"/>

        <TextView
            android:id="@+id/detail_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_size_18sp"
            tools:text="爱情，动作"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space2x"
            android:text="主演"/>

        <TextView
            android:id="@+id/detail_starring_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_size_18sp"
            tools:text="xxx, xxx"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space2x"
            android:text="剧情"/>

        <TextView
            android:id="@+id/detail_story_brief_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_size_16sp"
            tools:text="xxx, xxx"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
