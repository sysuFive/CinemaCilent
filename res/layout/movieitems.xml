<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginBottom="@dimen/four_dp"
    android:layout_marginLeft="@dimen/space"
    android:layout_marginRight="@dimen/space"
    android:layout_marginTop="@dimen/four_dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/movie_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/four_dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <ImageView
            android:id="@+id/movieimg"
            android:layout_width="90dp"
            android:layout_height="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/test"
            />
        <TextView
            android:id="@+id/moviename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="电影名称"/>

        <TextView
            android:id="@+id/movieinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="@dimen/four_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moviename"
            android:text="动作 冒险"
            tools:layout_height="@dimen/space2x"/>

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/movie_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="@dimen/space"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieinfo"
            app:srb_drawBorderEnabled="false"
            app:srb_fillColor="@color/colorAccent"
            app:srb_isIndicator="true"
            app:srb_starBackgroundColor="@android:color/darker_gray"
            app:srb_starSize="15dp"
            app:srb_starsSeparation="@dimen/two_dp"/>
        <TextView
            android:id="@+id/moviegrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/four_dp"
            android:layout_marginStart="@dimen/four_dp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toRightOf="@+id/movie_rating_bar"
            app:layout_constraintTop_toBottomOf="@+id/movieinfo"
            tools:text="7.8"/>

        <TextView
            android:id="@+id/movieactor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            android:maxLines="2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/space"
            app:layout_constraintTop_toBottomOf="@+id/movie_rating_bar"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="主演：xxx，xxx"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>